<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/building_item_icon_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:src="@drawable/building_default"/>

        <ProgressBar
            android:id="@+id/building_item_upgrade_progressbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/building_item_upgrade_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="UPGRADE (xxx s)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginStart="@dimen/building_list_item_text_margin_start"
        android:layout_marginLeft="@dimen/building_list_item_text_margin_start"
        android:orientation="vertical">


        <TextView
            android:id="@+id/building_item_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="24dp"
            android:textAllCaps="true"
            tools:text="Name"
            />

        <TextView
            android:id="@+id/building_item_level_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="20dp"
            tools:text="Level"
            />

        <TextView
            android:id="@+id/building_item_stats_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:text="On next level"
            />

        <TextView
            android:id="@+id/building_item_effect_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16dp"
            tools:text="effect : +xxx"
            />


        <TextView
            android:id="@+id/building_item_price_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:text="Price for next level"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/minerals_imageview_side"
                    android:layout_height="@dimen/minerals_imageview_side"
                    android:contentDescription="@string/main_minerals_imageview"
                    android:src="@drawable/minerals" />

                <ImageView
                    android:layout_width="@dimen/gas_imageview_side"
                    android:layout_height="@dimen/gas_imageview_side"
                    android:contentDescription="@string/main_gas_imageview"
                    android:src="@drawable/gas" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/building_item_minerals_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="xxxxx"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/building_item_gas_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:gravity="center"
                    tools:text="xxxxx"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>
